package gameobjects;

import geometry.Coordinate;
import geometry.Circle;
import geometry.Shape;

public abstract class Projectile extends GameObject{
	
	private double speed;
	protected double rotation;
	private Circle circle;
	protected Coordinate point;
	protected double damage;
	public final double BULLET_RADIUS = Block.BLOCK_SIZE * .20;
	private String playerName;
	public int team;
	public Player self;
	
	public Projectile(Coordinate p, Circle s, double r, String player, int t, Player sel) {
		super(p,s);
		rotation = r;
		speed = PlayerStats.getPlayerBulletSpeed(player);
		point = p;
		damage = PlayerStats.getPlayerDamage(player);
		playerName = player;
		team = t;
		self = sel;
	}
	
	public Coordinate getNextMove() {
		return new Coordinate(Math.cos(rotation)*speed+point.getX(),-Math.sin(rotation)*speed+point.getY());

	}
	
	public void move() {
		point = new Coordinate(Math.cos(rotation)*speed+point.getX(),-Math.sin(rotation)*speed+point.getY());
		circle = new Circle(point,(int)BULLET_RADIUS);
	}
	
	public void haveCollision(Block b) {
		
	}
	
	public void haveCollision(Player p) {
		//A13669304
	}
}
